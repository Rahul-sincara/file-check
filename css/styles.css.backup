    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: 0.5s;
}

button:hover::before, .course-btn:hover::before {
    left: 100%;
}

button:hover, .course-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
}

/* Floating animation for logo */
.logo {
    animation: float 3s ease-in-out infinite;
}

/* Rotate animation for icons on hover */
.logo i, .user-icon i, .card-header i {
    transition: transform 0.3s ease;
}

.logo:hover i, .user-icon:hover i {
    animation: rotate 0.5s ease;
}

/* Animate semester options */
.semester-option {
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.semester-option::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: 0.5s;
}

.semester-option:hover::before {
    left: 100%;
}

.semester-option:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

/* Animate course items */
.course-item {
    transition: all 0.3s ease;
