}

/* Theme switcher animations */
.theme-btn {
    transition: all 0.3s ease;
}

.theme-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
}

.theme-dropdown {
    animation: fadeInUp 0.3s ease;
}

/* Back button animation */
.back-button {
    transition: all 0.3s ease;
}

.back-button:hover {
    transform: translateX(-5px);
}

/* Navigation link animations */
nav a {
    transition: all 0.3s ease;
}

nav a:hover {
    transform: translateY(-3px);
}

/* Stat item animations */
.stat-item {
    transition: all 0.3s ease;
}

.stat-item:hover {
    transform: translateY(-5px);
}

/* Search button animation */
.search-container button {
    transition: all 0.3s ease;
}

.search-container button:hover {
    transform: scale(1.05);
}

/* Year page entrance animations */
.year-header {
    animation: slideInLeft 0.6s ease-out;
}

.semester-options {
    animation: slideInRight 0.6s ease-out 0.2s both;
}

.year-courses {
    animation: fadeInUp 0.6s ease-out 0.4s both;
}

/* Responsive animations */
@media (max-width: 768px) {
    .years-container, .course-list, .stats-container {
        animation: fadeInUp 0.6s ease-out;
    }
}

/* Ripple effect for buttons */
.ripple {
    position: absolute;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.7);
    transform: scale(0);
    animation: ripple 0.6s linear;
    pointer-events: none;
}

@keyframes ripple {
    to {
        transform: scale(2.5);
        opacity: 0;
    }
}

/* Scroll animation classes */
.card, .stat-item, .course-item, .semester-option {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
}

.card.visible, .stat-item.visible, .course-item.visible, .semester-option.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Enhanced button animations */
.btn-primary, .btn-secondary {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
}

.btn-primary::after, .btn-secondary::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 5px;
    height: 5px;
    background: rgba(255, 255, 255, 0.5);
    opacity: 0;
    border-radius: 100%;
    transform: scale(1, 1) translate(-50%);
    transform-origin: 50% 50%;
}

.btn-primary:focus:not(:active)::after, .btn-secondary:focus:not(:active)::after {
    animation: ripple 1s ease-out;
}

