/* Existing CSS code */

/* Theme styles - Default (Light Theme) */
:root {
    --primary: #2c3e50;
    --secondary: #1abc9c;
    --accent1: #3498db;
    --accent2: #e67e22;
    --accent3: #27ae60;
    --accent4: #9b59b6;
    --light: #9bdbeb;
    --dark: #2c3e50;
    --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    --transition: all 0.3s ease;
    
    /* New year-specific colors */
    --year1-color: #ff9800; /* Orange */
    --year2-color: #4caf50; /* Green */
    --year3-color: #2196f3; /* Blue */
    --year4-color: #fcfa6a55; /* Pale Yellow */
    
    /* Theme colors */
    --bg-color: #f5f7fa;
    --text-color: #333;
    --card-bg: #ffffff;
    --header-bg: linear-gradient(to right, var(--primary), var(--secondary));
    --nav-bg: #ffffff;
    --user-section-bg: #ffffff;
    --footer-bg: var(--dark);
}

/* Modern Portfolio Theme - Inspired by https://ayushojha69-portfolio.netlify.app/ */
[data-theme="portfolio"] {
    --primary: #6366f1; /* Indigo */
    --secondary: #8b5cf6; /* Violet */
    --accent1: #0ea5e9; /* Sky blue */
    --accent2: #ec4899; /* Pink */
    --accent3: #10b981; /* Emerald */
    --accent4: #f59e0b; /* Amber */
    --light: #f1f5f9; /* Light gray */
    --dark: #0f172a; /* Dark slate */
    --shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Year-specific colors with modern palette */
    --year1-color: #8b5cf6; /* Violet */
    --year2-color: #0ea5e9; /* Sky blue */
    --year3-color: #10b981; /* Emerald */
    --year4-color: #f59e0b; /* Amber */
    
    /* Theme colors */
    --bg-color: #f8fafc;
    --text-color: #0f172a;
    --card-bg: #ffffff;
    --header-bg: linear-gradient(135deg, var(--primary), var(--secondary));
    --nav-bg: rgba(255, 255, 255, 0.8);
    --user-section-bg: #ffffff;
    --footer-bg: var(--dark);
    
    /* Typography */
    --font-family: 'Inter', 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* Modern Dark Portfolio Theme - Inspired by Ayush's Portfolio */
[data-theme="modern-portfolio"] {
    --primary: #6366f1; /* Indigo */
    --secondary: #8b5cf6; /* Violet */
    --accent1: #0ea5e9; /* Sky blue */
    --accent2: #ec4899; /* Pink */
    --accent3: #10b981; /* Emerald */
    --accent4: #f59e0b; /* Amber */
    --light: #1e293b; /* Dark slate gray */
    --dark: #f1f5f9; /* Light gray */
    --shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3), 0 8px 10px -6px rgba(0, 0, 0, 0.3);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Year-specific colors with modern dark palette */
    --year1-color: #8b5cf6; /* Violet */
    --year2-color: #0ea5e9; /* Sky blue */
    --year3-color: #10b981; /* Emerald */
    --year4-color: #f59e0b; /* Amber */
    
    /* Theme colors */
    --bg-color: #000319; /* Very dark blue-black */
    --text-color: #cbd5e1; /* Light blue-gray */
    --card-bg: rgba(17, 25, 40, 0.75); /* Semi-transparent dark card */
    --header-bg: linear-gradient(135deg, #1e293b, #0f172a);
    --nav-bg: rgba(17, 25, 40, 0.75); /* Semi-transparent dark nav */
    --user-section-bg: rgba(17, 25, 40, 0.75);
    --footer-bg: #020617; /* Nearly black */
    
    /* Typography */
    --font-family: 'Inter', 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* Modern Portfolio Theme Specific Styles */
[data-theme="modern-portfolio"] body {
    background: var(--bg-color);
    color: var(--text-color);
    font-family: var(--font-family);
    background-image: 
        radial-gradient(circle at 10% 20%, rgba(99, 102, 241, 0.1) 0%, transparent 20%),
        radial-gradient(circle at 90% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 20%);
    background-attachment: fixed;
    overflow-x: hidden;
}

[data-theme="modern-portfolio"] header {
    background: var(--header-bg);
    color: white;
    padding: 30px;
    text-align: center;
    box-shadow: var(--shadow);
    position: relative;
    overflow: hidden;
    border-radius: 0 0 20px 20px;
    backdrop-filter: blur(16px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.125);
}

[data-theme="modern-portfolio"] .logo {
    font-size: 3rem;
    margin-right: 20px;
    animation: pulse 2s infinite;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

[data-theme="modern-portfolio"] h1 {
    font-size: 3rem;
    margin-bottom: 15px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    font-weight: 800;
    background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

[data-theme="modern-portfolio"] .tagline {
    font-size: 1.3rem;
    opacity: 0.9;
    max-width: 700px;
    margin: 0 auto 20px;
    font-weight: 500;
    color: #c1c2d3;
}

[data-theme="modern-portfolio"] .search-container {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    padding: 15px;
    border-radius: 50px;
    margin: 30px auto;
    max-width: 700px;
    display: flex;
    box-shadow: var(--shadow);
    transform: translateY(20px);
    animation: slideUp 0.5s ease forwards;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

[data-theme="modern-portfolio"] .search-container input {
    flex: 1;
    border: none;
    padding: 12px 25px;
    font-size: 1.1rem;
    outline: none;
    border-radius: 50px 0 0 50px;
    background: rgba(255, 255, 255, 0.9);
    color: #0f172a;
}

[data-theme="modern-portfolio"] .search-container input::placeholder {
    color: #64748b;
}

[data-theme="modern-portfolio"] .search-container button {
    background: var(--secondary);
    color: white;
    border: none;
    padding: 12px 25px;
    border-radius: 0 50px 50px 0;
    cursor: pointer;
    transition: var(--transition);
    font-weight: 600;
    font-size: 1.1rem;
}

[data-theme="modern-portfolio"] .search-container button:hover {
    background: var(--primary);
    transform: translateY(-3px);
}

[data-theme="modern-portfolio"] nav {
    background: var(--nav-bg);
    padding: 20px;
    display: flex;
    justify-content: center;
    box-shadow: var(--shadow);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
    border-radius: 0 0 15px 15px;
    border: 1px solid rgba(255, 255, 255, 0.125);
}

[data-theme="modern-portfolio"] nav a {
    color: #c1c2d3;
    margin: 0 25px;
    text-decoration: none;
    font-weight: 600;
    padding: 12px 20px;
    border-radius: 30px;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    font-size: 1.1rem;
}

[data-theme="modern-portfolio"] nav a:hover {
    background: rgba(139, 92, 246, 0.1);
    color: var(--secondary);
    transform: translateY(-3px);
}

[data-theme="modern-portfolio"] .user-section {
    background: var(--user-section-bg);
    padding: 30px;
    margin: 30px auto;
    max-width: 1200px;
    border-radius: 20px;
    box-shadow: var(--shadow);
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.125);
    backdrop-filter: blur(16px) saturate(180%);
}

[data-theme="modern-portfolio"] .year-selector-title {
    color: #e2e8f0;
    margin-bottom: 15px;
    font-size: 2rem;
    font-weight: 700;
}

[data-theme="modern-portfolio"] .year-selector-subtitle {
    color: #94a3b8;
    margin-bottom: 40px;
    font-size: 1.2rem;
    font-weight: 500;
}

[data-theme="modern-portfolio"] .years-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 25px;
    margin-top: 30px;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
}

[data-theme="modern-portfolio"] .year-option {
    background: var(--card-bg);
    border-radius: 15px;
    padding: 30px 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    box-shadow: var(--shadow);
    backdrop-filter: blur(16px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.125);
}

[data-theme="modern-portfolio"] .year-option:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
}

[data-theme="modern-portfolio"] .year-option.selected {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
    border-color: var(--secondary);
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(99, 102, 241, 0.1));
}

[data-theme="modern-portfolio"] .year-number {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 15px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

[data-theme="modern-portfolio"] .year-label {
    font-size: 1.3rem;
    color: #e2e8f0;
    font-weight: 700;
    margin-bottom: 10px;
}

[data-theme="modern-portfolio"] .year-description {
    font-size: 1rem;
    color: #94a3b8;
    margin-top: 10px;
    line-height: 1.5;
}

[data-theme="modern-portfolio"] .btn-primary {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    padding: 15px 35px;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    border: none;
    cursor: pointer;
    transition: var(--transition);
    box-shadow: var(--shadow);
}

[data-theme="modern-portfolio"] .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 30px rgba(99, 102, 241, 0.4);
}

[data-theme="modern-portfolio"] .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: #e2e8f0;
    padding: 15px 35px;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    cursor: pointer;
    transition: var(--transition);
    box-shadow: var(--shadow);
}

[data-theme="modern-portfolio"] .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-3px);
}

[data-theme="modern-portfolio"] .stats {
    background: var(--card-bg);
    max-width: 1200px;
    margin: 50px auto;
    padding: 40px;
    border-radius: 20px;
    box-shadow: var(--shadow);
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.125);
    backdrop-filter: blur(16px) saturate(180%);
}

[data-theme="modern-portfolio"] .stats h2 {
    margin-bottom: 30px;
    color: #e2e8f0;
    font-size: 2rem;
    font-weight: 700;
}

[data-theme="modern-portfolio"] .stat-number {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary);
    margin-bottom: 15px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

[data-theme="modern-portfolio"] .stat-label {
    font-size: 1.2rem;
    color: #94a3b8;
    font-weight: 500;
}

[data-theme="modern-portfolio"] footer {
    background: var(--footer-bg);
    color: #94a3b8;
    text-align: center;
    padding: 40px;
    margin-top: 60px;
    border-radius: 20px 20px 0 0;
    border-top: 1px solid rgba(255, 255, 255, 0.125);
}

